- load formatters
- load mathfilters
doctype html
- with '基金产品详情' as title
include include/head
- endwith
body
  include include/header
  - with '基金产品' as activeItem
  include include/navigation
  - endwith
  .container
    .span8.panel-nopadding.panel-header
      .panel-product-title-bar
        .panel-product-title
          .product-title.ispan11 {{ fund.name }}
          if is_favorited != 1
            a#addToFavorite.button.button-mini.button-white.pull-right(href="#", data-id="{{fund.id}}", data-is-favorited="{{is_favorited}}")收藏
          else
            a#addToFavorite.button.button-mini.button-white.pull-right(href="#", data-id="{{fund.id}}", data-is-favorited="{{is_favorited}}")取消
      .row
        .span4
          .span12
            .card-icon
              dl
                dt 是银行活期利率的
                dd
                  span.highlight {{fund.rate_7_days | current_deposit_times}}
                  span.font-m.light-gray-text 倍
        .span4
          .well-m
            .row
              dl.span12.key-value(style='line-height: 27px')
                dt 七日年化收益：
                dd.highlight.font-l {{fund.rate_7_days | percentage}}
            .row
              dl.span12.key-value
                dt 起购金额：
                dd {{fund.investment_threshold | money}}
            .row
              dl.span12.key-value
                dt 随买随卖
                dd
        .span4-omega
          .well-m
            if user.is_authenticated
              a.button.button-middle.button-red(href="/shumi/oauth/check_oauth_status/?fund_code={{fund.product_code}}&return_url=http://127.0.0.1:8000/shumi/trade/callback/?fund_code={{fund.product_code}}" target='_blank') 立即购买
            else
              a.button.button-middle.button-red(href="/accounts/register/?next=/fund/detail/{{fund.id}}") 立即购买
            p 申请人数{{fund.bought_count}}人

    .span4-omega.panel-nopadding.panel-header
      .panel-product-title-bar
        .panel-product-title 收益计算器
      form(data-period="50", data-rate="5")
        .form-row-m.padding-left-s.margin-top-s
          label.form-row-label 投资金额：
          span.ispan4.relative-pos
            if fund.rate_7_days
              input.ispan12(type="text", data-rate="{{fund.rate_7_days}}",  /
                data-period="30", data-target="#earning", data-role="earning-calculator")
            else
              input.ispan12(type="text", data-rate="{{fund.rate_1_year}}",  /
                data-period="30", data-target="#earning", data-role="earning-calculator")
            span.absolute-pos.pos-r-s 万
          span &nbsp;&nbsp;&nbsp;月预期收益：
          span#earning.highlight 0.0
          span 元

  .panel-nopadding
    .panel-product-title-bar
      .panel-product-title 产品详情
    table.bordered-table.margin-top-m1
      tbody
        tr
          th 基金经理
          td {{fund.manager}}
          th 托管银行
          td {{fund.hosting_bank}}
        tr
          th 基金管理费
          td {{fund.management_fee}}
          th 基金托管费
          td {{fund.hosting_fee}}
        tr
          th 成立日期
          td {{fund.found_date | date:"Y年n月j日" | na_if_none}}
          th 最新份额
          td {{fund.latest_shares | na_if_none}}
        tr
          th 首募规模
          td {{fund.init_scale | na_if_none}}
          th 最新规模
          td {{fund.latest_scale | na_if_none}}
        tr
          th 近一月涨幅
          td {{fund.rate_1_month | percentage}}
          th 近三月涨幅
          td {{fund.rate_3_months| percentage}}
        tr
          th 近半年涨幅
          td {{fund.rate_6_months | percentage}}
          th 近一年涨幅
          td {{fund.rate_1_year | percentage}}
  .panel-nopadding
    .panel-product-title-bar
      .panel-product-title 投资目标

    p.well {{fund.investment_target | linebreaksbr}}

  .panel-nopadding
    .panel-product-title-bar
      .panel-product-title 投资范围

    p.well {{fund.investment_scope | linebreaksbr}}

  .panel-nopadding
    .panel-product-title-bar
      .panel-product-title 投资策略
    p.well {{fund.investment_strategy | linebreaksbr}}

  .panel-nopadding
    .panel-product-title-bar
      .panel-product-title 风险收益特征
    p.well {{fund.risk_character | linebreaksbr}}

  include include/footer
  script.
    require(['/static/js/fund_detail.js'])
  include include/tracking
