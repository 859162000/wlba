- load formatters

doctype html
head
  - with '提现记录' as title
  include include/common_head
  - endwith
  link(rel="stylesheet", href="/static/stylesheets/jquery-ui.min.css")

body
  include include/header
  include include/navigation

  .panel
    .panel-title-bar
      .panel-title 选择日期
    .panel-content
      form
        .form-row
          .span1 日期
          .span8
            input#datepicker(type='text', name='date')
        .form-row
          input(type='submit', value='查询')

  .panel
    .panel-title-bar
      .panel-title 提现请求
    .panel-container
      table.table
        thead
          tr
            th 流水号
            th 时间
            th 总金额(元)
            th 手续费(元)
            th 卡号尾号
            th 状态
        tbody
          each trade_record in trade_records
            tr
              td {{trade_record.id}}
              td {{trade_record.update_time | date:"Y-m-d H:i:s"}}
              td {{trade_record.total_amount}}
              td {{trade_record.fee}}
              td {{trade_record.card_no | last_four_char}}
              td {{trade_record.status}}

  script.
    require(["/static/js/withdraw_transactions.js"])
  include include/footer
  include include/templates
  include include/tracking