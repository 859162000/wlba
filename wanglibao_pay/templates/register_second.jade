-load formatters
-load mathfilters
doctype html
html
    head
        - with '网利宝官网' as title
        include global/g_head
        - endwith
    body
        include global/g_nav
        - csrf_token
        .register
            .login-href 暂不绑卡，回到
                a(href='/') 首页
            .register_nav_min.register_nav_min3
            .register_box.clearfix
                .login-form
                    .registerFormDiv.tie-on-card
                        ul.registerForm
                            li.clearfix.select_style
                                label 银行卡：
                                select.select_bank.checkCodeStatus(name='gate_id',placeholder="请选择银行")
                                  option(value='') 请选择银行
                                  //for bank in banks
                                  //  option(value='{{bank.gate_id}}',data-id='{{bank.id}}') {{bank.name}}
                                .bankPop
                            li.clearfix
                                label 卡号：
                                input.placeholderInput.checkCodeStatus.cardId(type="text", name="", placeholder="请输入银行卡号", autocomplete='off', title="请输入银行卡号")
                            li.clearfix
                                label 预留手机号：
                                input.placeholderInput.checkCodeStatus.mobileCode(type="text", name="", placeholder="请输入银行预留手机号", autocomplete='off', title="请输入银行预留手机号")
                            li.clearfix.codeParent
                                label 验证码 ：
                                input(type='hidden')#order_id
                                input(type='hidden')#token
                                input#registerSMSCode.w115.placeholderInput.checkCodeStatus.checkSEMCode(type="text", name="button-get-validate-code", placeholder="请输入验证码", autocomplete='off', title="请输入验证码")
                                button.get-code-btn(type='button') 获取验证码
                        .error-box
                        .form_bottom
                            .tie-on-card-btn#tieOnCard
                .register_info
                    h3 新手大礼包，你来我就送！
                    .reward-box
                        .reward-left
                            p
                                span 28888
                                | 元
                            p 注册即送
                        .reward-right 体验金
                    .reward-box
                        .reward-left
                            p
                                span 80
                                | 元
                            p 首次充值送现金红包
                        .reward-right 红包
    include global/g_footer
    script.
      require(["/static/src/pc/register_next.js?v=201512044"])

