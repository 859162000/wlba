doctype html
html
  head
    title 注册网利宝
    include include/fuel_head.jade
  body
    .fuel-regist-warp
      .fuel-input-public.fuel-input-space
        .fuel-input-icon.regist-input-icon
          .phone
        input(type='tel', name='identifier', placeholder= '请输入手机号', data-icon='fuel-input-icon', data-operation='fuel-clear-input', autocomplete='off').fuel-input-main
        .fuel-operation-icon.fuel-clear-input

      .fuel-input-double.fuel-input-space
        .fuel-input-public
          .fuel-input-icon.regist-input-icon
            .captcha
          input(type='tel', name='captcha_1', placeholder= '请输入计算结果',data-icon='fuel-input-icon', data-other='fuel-validation-btn', data-operation='fuel-clear-input', autocomplete='off').fuel-input-main
          input(type='hidden', name='captcha_0')
        .fuel-validation
          img(src="", alt="", width="100%", height="100%")#captcha

      .fuel-input-double.fuel-input-space
        .fuel-input-public
          .fuel-input-icon.regist-input-icon
            .validation
          input(type='tel', name='validate_code', placeholder= '请输入验证码', data-icon='fuel-input-icon',  autocomplete='off').fuel-input-main

        .fuel-validation
          button(type="button",name='validate_operation', disabled=true).fuel-validation-btn 获取验证码

      .fuel-input-public.fuel-input-space
        .fuel-input-icon.regist-input-icon
          .password
        input(type='password', name='password', placeholder= '请设置密码',data-icon='fuel-input-icon',  autocomplete='off').fuel-input-main
        .fuel-operation-icon.fuel-hide-password.fuel-password-operation

      .fuel-input-public
        .fuel-input-icon.regist-input-icon
          .token
        input(type='text', name='invite_code', placeholder= '请填写邀请码，若无，请忽略', data-icon='fuel-input-icon',  autocomplete='off').fuel-input-main

      .fuel-safe-green.safe-space
        span 账户资金安全由平安银行承保

      button(type="submit", disabled=true).fuel-regist-submit 立即注册｜ 领取奖励


      .fuel-bottom-warp
        .fuel-regist-agreement
          .hook#agreement.agreement
            input(type='checkbox',name='agreement', checked=true)
          .span 同意网利宝服务协议

        a(href='/fuel/login/').fuel-for-login 立即登录
    include include/fuel_errorsign
    script(src='/static/scripts/mobile_fuelcard/dev/vendor.zepto.js')
    script(src='/static/scripts/mobile_fuelcard/dev/regist.js')