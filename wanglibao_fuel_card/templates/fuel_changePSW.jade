doctype html
html
  head
    title 修改登录密码
    include include/fuel_head.jade
  body
    .fuel-password-warp
      .fuel-input-public.fuel-input-space
        .fuel-input-name.login-input-name 原密码
        input(type='text', name='old-password', placeholder= '请输入原登录密码',  data-operation='fuel-clear-input', autocomplete='off').fuel-input-main
        .fuel-operation-icon.fuel-clear-input

      .fuel-input-public.fuel-input-space
        .fuel-input-name.login-input-name 新密码
        input(type='text', name='new-password1', placeholder= '请输入新登录密码', data-operation='fuel-clear-input', autocomplete='off').fuel-input-main
        .fuel-operation-icon.fuel-clear-input

      .fuel-input-public
        .fuel-input-name.login-input-name 确认密码
        input(type='text', name='new-password2', placeholder= '请确认新登录密码', data-operation='fuel-clear-input', autocomplete='off').fuel-input-main
        .fuel-operation-icon.fuel-clear-input

      .fuel-submit-warp
        button(type='submit', disabled=true).fuel-password-submit 修改登录密码

    include include/fuel_alert
    include include/fuel_errorsign
    - with 'pro' as DEBUG
    include include/fuel_zepto
    - endwith
    script(src='/static/scripts/mobile_fuelcard/pro/reset_password.js?v')

