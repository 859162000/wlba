doctype html
html
  head
    title 修改登录密码
    include include/fuel_head.jade
  body
    .fuel-password-warp
      .fuel-input-public.fuel-input-space
        .fuel-input-name 原密码
        input(type='text', name='password', placeholder= '请输入原登录密码').fuel-input-main
        .fuel-operation-icon.fuel-clear-input

      .fuel-input-public.fuel-rechage-space
        .fuel-input-name 新密码
        input(type='text', name='password', placeholder= '请输入新登录密码').fuel-input-main
        .fuel-operation-icon.fuel-clear-input

      .fuel-input-public
        .fuel-input-name 确认密码
        input(type='text', name='password', placeholder= '请确认新登录密码').fuel-input-main
        .fuel-operation-icon.fuel-clear-input

      .fuel-submit-warp
        button(type='submit').fuel-password-submit 修改登录密码

