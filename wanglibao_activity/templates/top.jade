-load formatters
-load mathfilters
doctype html
html
    head
        - with '网利宝' as title
        include include/common_head
        - endwith
        meta(name="keywords", content="网利宝")
        meta(name="description", content="网利宝是针对中国中产阶级人群的一站式网络理财服务平台，网利宝把国外传统的“私人银行”模式引入中国，我们通过独有的用户投资专业评估体系和个人理财数据分析算法，利用PC和移动互联网等方式，为客户提供个性化投资产品推荐，降低理财门槛，提高投资者的理财收益水平。")
        //link(rel="stylesheet",href="/static/stylesheets/day.css")
        link(rel="stylesheet",href="/static/stylesheets/activity.css")
    body
      .act-full-container
        .act-topbar
          .container.row
            .act-user-div
              i(style="padding:0px;margin:0px;border:0px;font:inherit;").act-icon-phone.font-l &nbsp;
              span 客服热线：
              span 4008-588-066
              span.act-margin-left-m 关注我们：
              a.topbar-anchor.act-icon.act-icon-weibo(href="http://weibo.com/u/5000682691", target="_blank", data-role="hover", data-target="#qrweibo-top")
              a.topbar-anchor.act-icon.act-icon-weixin(href="javascript:void(0)", data-role="hover", data-target="#qrcode-top")
              a#qrweibo-top.act-weibo-qr-code(href="http://weibo.com/u/5000682691", target="_blank",  data-name="hoverbox",style="display:none")
                img.act-weibo-qr-code(src="/static/images/weibo-nqr.png")
              img#qrcode-top.act-icon.act-weixin-qr-code(src="/static/images/weixin-nqr.png", style="display:none",data-name="hoverbox")
              span.act-mobile-app-top
                span.act-icon.act-icon-mobile-app
                span 手机网利宝
                .act-mobile-app-top-prompt
                  div(style="height:30px; top:-20px; position:relative;")
                  a.act-mobile-app-apple(href="https://itunes.apple.com/cn/app/wang-li-bao/id881326898?mt=8", target="_blank", title="iPhone版")
                  a.act-mobile-app-android(href="https://www.wanglibao.com/static/wanglibao1.apk", title="Android版")
      .activity-nav
        .act-container-login-nav
          a(href='/')
            if result.logo_other
              .act-logo(style="background:url('/media/{{result.logo}}');background-repeat:no-repeat;background-position:center;height:75px;width:175px;display:inline-block")
              .act-logo(style="background:url('/media/{{result.logo_other}}');background-repeat:no-repeat;background-position:center;height:75px;width:175px;display:inline-block")
            else
              .act-logo(style="background:url('/media/{{result.logo}}');background-repeat:no-repeat;background-position:center;height:75px;width:350px;display:inline-block")
          .login-nav
            include include/nav_common
