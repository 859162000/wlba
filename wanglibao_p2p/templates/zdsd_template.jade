product = equity.product

doctype html
html
  head(lang='en')
    meta(charset='UTF-8')
    title 网利宝借款协议
    style.
      h1 {
        text-align: center;
      }
      h2 {
        margin-top: 1em;
        text-align: left;
      }
      table{
        table-layout: fixed;
        border-collapse: collapse;
        width: 100%
      }
      td{
        border: 1px solid lightgray;
        text-align: center;
        height: 40px;
      }
      li{
        padding-left: 1em;
        margin-left: 1em;
        line-height: 2;
      }
      ul{
        list-style: none;
        padding-left: 0;
      }
      ul>li{
        padding-left: 0;
        margin-left: 0;
      }
