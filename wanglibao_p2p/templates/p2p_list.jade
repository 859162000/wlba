                            em.p2pinfo-active.highlight.font-weight {{ p2p.period }}
                            em &nbsp;个月
                          .span5-omega.p2pinfo-ceil
                            em {{ p2p.available_amout | money_format_int }} 元可投

                        .p2pinfo-flow(id="period_{{ forloop.counter }}")
                          .row.p2pinfo-flow-top
                            .span6
                              span.font-weight {{ p2p.total_amount | money_format_int }}
                              | 元总金额
                            if p2p.category == '证大速贷'
                              .span6-omega(title="本息保障：{{ p2p.warrant_company.name }}") 本息保障：{{ p2p.warrant_company.name }}
                            else
                              .span6-omega(title="担保公司：{{ p2p.warrant_company.name }}") 担保公司：{{ p2p.warrant_company.name }}
                          .row.p2pinfo-flow-foot
                            .span6
