            tr
              td 还款来源
              td 【{{product.repaying_source}}】
            tr
              td 借款本金数额（小写）
              td 【￥{{product.total_amount}}】
            tr
              td 借款本金数额（大写）
              td 【{{product.total_amount | number_to_chinese}}】
            tr
