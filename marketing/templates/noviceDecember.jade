        script.
          function getQueryStringByName(name) {
            var result = location.search.match(new RegExp('[\?\&]' + name + '=([^\&]+)', 'i'));
            if (result == null || result.length < 1) {
              return '';
            }
            return result[1];
          }
          getQueryStringByName('promo_token') == 'baidupz' ? window.location.href='http://www.wanglibao.com?promo_token=baidupz' : ''

