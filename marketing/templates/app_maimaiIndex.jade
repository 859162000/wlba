- load formatters
doctype html
html(style="background: #f6f6f6")
  head
    title 网利宝
    include include/app_head
  body
    input(type='hidden', name='token', value='{{token}}')
    .maimai-banner
      if token == 'blued'
        img(src='/static/imgs/mobile_activity/app_maimai/man.jpg')
      else
        img(src='/static/imgs/mobile_activity/app_maimai/chelun.jpg')
      a(href='/activity/maimai_rules/').maimai-rule 活动规则
    .maimai-form
      input(type='tel', name='phone', placeholder='输入手机号',data-type='Phone',data-message='请输入正确的手机号', autocomplete = 'off').maimai-phone
      .maimai-check-body
        .maimai-form-margin
        .phone-check
          input(type='tel', name='codeimg',data-type='Val',data-message='请输入图形验证码',  placeholder='输入验证码').check-input
          input(type='hidden', name='codeimg_key',value='')
          img(src='').check-img
        .maimai-form-margin
        .phone-check
          input(type='tel', name='codenum',data-type='Val',data-message='请输入短信码', placeholder='输入短信码').check-input
          button(type="button").check-submit 短信验证码
      .maimai-form-sign 请输入正确的手机号
      .maimai-form-margin.maimai-sign-margin
      input(type='button',name='submit' ,value="领 取",disabled=true).maimai-form-btn
    //宣传文案
    section.regist-propagate
      ul
        mixin li(imgName, title, bodyTxt1, bodyTxt2)
          li
            span(class=imgName)
            h4=title
            p=bodyTxt1
            p=bodyTxt2


        +li('trust', '信赖', 'IDG资本A轮投资', '足额抵押物保障')
        +li('safe', '安全', '账户资金安全', '由阳光保险承保')
        +li('authority', '权威', 'A股百亿上市公司', '鸿利光电投资入股')
        +li('profit', '高收益', '37倍银行活期收益', '100元起投0手续')
    script(data-init='mmIndex', src="/static/scripts/mobile_activity/dist/maimai.js?v=20160426")
