- load formatters
doctype html
html(style="background: #525193")
    head
        title 网利宝
        include include/app_head
        link(href="/static/styles/mobile_activity/app_xiaoher.css?v=201511171", rel="stylesheet")
        - csrf_token
    body
        img.banner(src="/static/imgs/mobile_activity/app_xiaoher/banner.jpg")
        img.title_img_1(src="/static/imgs/pc_activity/xiaoher/title_1.png")
        .step_wrap
            .step_box
                dl
                    dt Step1
                    dd 注册网利宝帐号
                img.step_img(src="/static/imgs/pc_activity/xiaoher/step_1.png")
            .step_box
                dl
                    dt Step2
                    dd 充值资金到账户
                img.step_img(src="/static/imgs/pc_activity/xiaoher/step_2.png")
            .step_box
                dl
                    dt Step3
                    dd 选择投资标
                img.step_img(src="/static/imgs/pc_activity/xiaoher/step_3.png")
            .step_box
                dl
                    dt Step4
                    dd 投资1000元及以上
                img.step_img(src="/static/imgs/pc_activity/xiaoher/step_4.png")
            .step_box
                dl
                    dt Step5
                    dd 获得100元免单券
                img.step_img(src="/static/imgs/pc_activity/xiaoher/step_5.png")
            .step_box
                dl
                    dt Step6
                    dd 购物享免单
                img.step_img(src="/static/imgs/pc_activity/xiaoher/step_6.png")
    script(src='/static/src/mobile/lib/weixin/wx.js')
    script(src="/static/scripts/mobile_activity/app_xiaoher.js?v=201511176")
    script.
        var ipad = navigator.userAgent.match(/(iPad).*OS\s([\d_]+)/) ? true : false,
                iphone = !ipad && navigator.userAgent.match(/(iPhone\sOS)\s([\d_]+)/) ? true : false,
                ios = ipad || iphone;
        if (ios) {
            document.getElementById('ios-show').style.display = 'block';
        }
