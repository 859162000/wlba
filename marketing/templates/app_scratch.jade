      a.sceatch_continue#btn_go(href="javascript:;") 开始使用
      a.sceatch_continue#continue(href="javascript:;") 再来一次
      .sceatch_information
        img(src="/static/imgs/mobile_activity/app_scratch/gg_wlbank.png")
      .sceatch_information
        img(src="/static/imgs/mobile_activity/app_scratch/gg_touzi.png")
