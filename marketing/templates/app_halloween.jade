      .bg
      img.poor_boy(src='/static/imgs/mobile_activity/app_halloween/poor_boy.gif')
      img.poor_text(src='/static/imgs/mobile_activity/app_halloween/poor_text.png')
      .light.poor_light_animate
      a.button(href='https://www.wanglibao.com/weixin/regist/?next=/weixin/authentication/?promo_token=h5chuanbo')
        img(src='/static/imgs/mobile_activity/app_halloween/poor_button.png')
    .rich_wrap(style='display:none')
      .bg_front
      .rich_bg_after
      img.boy_img(src='/static/imgs/mobile_activity/app_halloween/fage.gif')
      img.rich_text(src='/static/imgs/mobile_activity/app_halloween/rich_text.png')
      .light.rich_light_animate
        img(src='/static/imgs/mobile_activity/app_halloween/rich_light_one.png')
      a.button(href='https://www.wanglibao.com/weixin/regist/?next=/weixin/authentication/?promo_token=h5chuanbo')
        img(src='/static/imgs/mobile_activity/app_halloween/rich_button.png')
