            .share
                a(href='/activity/share/index/').wx
                    img(src='/static/imgs/mobile_activity/share/href2.png').href
                .logo
                    img(src='/static/imgs/mobile_activity/share/logo.png')
                p.profit 给100%努力的你
                p.profit 再多16%的收获
                p.code-remarks 长按二维码 关注网利宝公众账号
                p.code-img
                    img(src='/static/imgs/mobile_activity/share/code.jpg')
        script.
          var ipad = navigator.userAgent.match(/(iPad).*OS\s([\d_]+)/) ? true : false,
              iphone = !ipad && navigator.userAgent.match(/(iPhone\sOS)\s([\d_]+)/) ? true : false,
              ios = ipad || iphone;
          if (ios) {
              document.getElementById('ios-show').style.display = 'block';
          }
