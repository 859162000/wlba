                                - var item1 = ['','','','','','','','','','']
                                each item in item1
                                    li= item
                            ul.three
                                li.front 0 元
                                li.front 0 元
                                li.front 0 元
                                - var item1 = ['0 元','0 元','0 元','0 元','0 元','0 元','0 元']
                                each item in item1
