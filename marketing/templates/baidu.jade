            img(src="/static/imgs/pc_activity/xunlei/seven/sev_qq.png",style="margin-top:10px")#xl-qq
          .erweima

    //end
    .baidu-activity(style="margin-top:-30px")
        .baidu-div
            .gjw-wrap
              .xl-box1
                h2.xl-jiang
                  .xl-center#seven-center(style="color:#cf0027")
                    | 投资流程
                .content-process
                  .content-pptv(style="background:#f8f2ce")
                    .process-text(style="height:32px;padding:0")
                    .process-list
                      .circle-free.circle-float
                        .close
                        .last
