#display
script.
  var v = new Date().getTime()
  require(['/static/js/hover.js','/static/js/eight.js?v='+v,'/static/js/advance.js'])
  var endTimeStr = "2015-08-08 00:00:00";
  var endTime = Date.parse(endTimeStr);

  var toHHMMSS = function (sec_num) {
      var hours   = Math.floor(sec_num / 3600);
      var minutes = Math.floor((sec_num - (hours * 3600)) / 60);
      var seconds = Math.floor(sec_num - (hours * 3600) - (minutes * 60));

      days = Math.floor(hours / 24);
      hours = hours % 24;

      if (hours   < 10) {hours   = "0"+hours;}
      if (minutes < 10) {minutes = "0"+minutes;}
      if (seconds < 10) {seconds = "0"+seconds;}

      var time  = {"days":days, "hours":hours, "mins": minutes, "secs": seconds};
      return time;

  }

  window.onload = function(){
    setInterval(function(){
      var t =  ( endTime - new Date().getTime() ) / 1000 ; // 当前时间到截止时间秒数
      var time = toHHMMSS(t);
      var output = time['days'];
      var time_eight =time["hours"]
      var time_eight1 =time["mins"]
      var time_eight2 =time["secs"]
      document.getElementById("display").innerHTML =  output;
      document.getElementById("display1").innerHTML = time_eight;
      document.getElementById("display2").innerHTML = time_eight1;
      document.getElementById("display3").innerHTML = time_eight2;
    }, 1000);
  };