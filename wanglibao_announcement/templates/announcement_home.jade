    body
        include global/g_nav
        - with '网站公告' as title
        include include/about_sidebar
        - endwith
        .section
            .media_box.clearfix
                .notice_list.clearfix
                    ul.clearfix
                        for announce in announcements
                            li.notice_title
                                a(href="/announcement/detail/{{announce.id}}/", target="_blank")
                                    i
                                    | {{announce.title}}
                                span {{announce.createtime | date:'Y-m-d'}}
                    .pager
                        - with data=announcements uri='/announcement/'
                        include include/pager
                        - endwith
        include global/g_footer
        include include/tracking
                 