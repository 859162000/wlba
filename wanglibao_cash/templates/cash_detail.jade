- load formatters
doctype html
- with '现金类理财产品详情' as title
include include/head
- endwith
body
  include include/header
  - with '现金类理财产品' as activeItem
  include include/navigation
  - endwith
  .container
    .span8.panel.panel-header
      .row
        .span8
          .panel-bar-s
            .panel-title-l {{ cash.name }}
          .well
            .row
              .span8
                dl.span6.key-value
                  dt 发行机构：
                  dd {{ cash.issuer.name }}
                dl.span6-omega.key-value
                  dt 销售状态：
                  dd {{ cash.status }}
            .row
              .span8
                dl.span6.key-value
                  dt 每万份收益：
                  dd {{ cash.profit_10000 }}元
                dl.span6-omega.key-value
                  dt 购买方式：
                  dd
                    a(href="{{cash.buy_url}}") {{cash.buy_text}}
        .span4-omega
          .span6
            .card-icon
              dl
                dt 7日年化收益
                dd {{cash.profit_rate_7days}}%
          .span6-omega
            .card-icon
              dl
                dt 投资期限
                if cash.period > 0
                  dd {{cash.period}}个月
                else
                  dd 活期
        .row.panel-footer
          .well
            p.pull-left 银行客服电话: {{cash.issuer.phone}}
            if is_favorited != 1
              a#addToFavorite.pull-right(href="#", data-id="{{cash.id}}", data-is-favorited="{{is_favorited}}")收藏
            else
              a#addToFavorite.pull-right(href="#", data-id="{{cash.id}}", data-is-favorited="{{is_favorited}}")取消收藏

    .span4-omega.panel.panel-header
      .panel-product-title-bar
        span.panel-title 收益计算器
      form
        .form-row
          label.span3.form-row-label 投资额度
          input.span8(type="text")

  .panel
    .well
      table.bordered-table
        tbody
          tr
            th(colspan="1") 产品说明
            td(colspan="5") {{cash.brief | linebreaksbr}}
          tr
            th(colspan="1") 收益说明
            td(colspan="5") {{cash.profit_brief | linebreaksbr}}
          tr
            th(colspan="1") 购买说明
            td(colspan="5") {{cash.buy_brief | linebreaksbr}}
          tr
            th(colspan="1") 赎回说明
            td(colspan="5") {{cash.redeem_brief | linebreaksbr}}
          tr
            th(colspan="1") 投资风险说明
            td(colspan="5") {{cash.safe_brief | linebreaksbr}}


  .space-vertical-s
  include include/footer
  script.
    require(['/static/js/cash_detail.js'])

  include include/tracking