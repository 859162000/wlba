        float: right;
        position: relative;
        overflow: visible;
      }
      .g-nav-box i{
        font-size: 12px;
        color: #bfbfbf;
        vertical-align: middle;
        position: absolute;
        left: 162px;
        top: 30px;
      }
      .g-nav-fixed i{
        top: 21px;
      }

      .money-ul {
        position: absolute;
        top: 79px;
        left: 71px;
        width: 104px;
        background: #fff;
        z-index: 11;
        box-shadow: 0 3px 6px rgba(0,0,0,0.2);
        display: none;
      }


      #money-ul li{
