.g-nav-warp
  .g-nav
    a(href="/").g-logo-box
      img(src="/static/imgs/pc/logo/logo_yuandan.jpg?v=2", alt='网利宝', class='logo_l')
      img(src="/static/imgs/pc/logo/logo_yuandan_min.jpg?v=2", alt='网利宝', class='logo_s')
    .g-user-warp
      .g-user
        if activeItem == "我的账户"
          myacount = 'highlight'
        a(href="http://source.wanglibao.com/monthly.php?action=userMonthly&type=1", class='{{myacount}}').user-nav
          i.icon.iconfont.icon-user
          span.user-text 我的账户
          i.icon.iconfont.icon-down
        ul.g-nav-user-nav#g-nav-user-nav
          mixin liItem(url, text)
            li
              a(href=url)=text
          +liItem('/pay/banks/', '我要充值')
          +liItem('/pay/withdraw/', '我要提现')
          +liItem('/accounts/auto_tender/', '自动投标')
          +liItem('/accounts/transaction/p2p/', '交易记录')

    .g-nav-box#g-nav-box
      mixin nav-item(name, link, news)
        if activeItem == name
            a.highlight(href=link)= name
              if news
                img(src='/static/imgs/pc/nav/new_gif.gif').nav-news
        else
            a(href=link)= name
              if news
                img(src='/static/imgs/pc/nav/new_gif.gif').nav-news

      +nav-item('首页', '/')
      +nav-item('理财专区', '/p2p/list/')
      +nav-item('贷款专区', '/finance/')
      +nav-item('活动专区', '/activity/area/', 'new')
      +nav-item('安全保障', '/security')
      i.icon.iconfont.icon-down
      ul.money-ul#money-ul
        mixin liItem(url, text)
          li
            if text = '债权转让'
              a(href='/ylb/exchange.php?action=listAll')=text
            else
              a(href=url)=text
        +liItem('/ylb/monthly.php', '月利宝')
        +liItem('/p2p/list/', '散标')
        +liItem('/ylb/exchange.php', '转让标')


script.
  var box = document.getElementById("g-nav-box").getElementsByTagName("a")[1];
  var _ul = document.getElementById('money-ul');
  box.onmouseover = function(){
    _ul.style.display = 'block';
  }
  box.onmouseout = function(){
    _ul.style.display = 'none';
  }
  _ul.onmouseover = function(){
    _ul.style.display = 'block';
  }
  _ul.onmouseout = function(){
    _ul.style.display = 'none';
  }



