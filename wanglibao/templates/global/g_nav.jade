.g-nav-warp
  .g-nav.g-year-layout
    a(href="/").g-logo-box
      img(src="/static/imgs/pc/logo/logo_4_23_79.jpg?v=423", alt='网利宝', class='logo_l')
      img(src="/static/imgs/pc/logo/logo_4_23_59.jpg?v=423", alt='网利宝', class='logo_s')
    .g-user-warp
      .g-user
        if activeItem == "我的账户"
          myacount = 'highlight'
        a(href="/accounts/home/", class='{{myacount}}').user-nav
          if user.is_authenticated
            i.user-icon-img-active
          else
            i.user-icon-img
          span.user-text 我的账户
          i.icon.iconfont.icon-down
        ul.g-nav-user-nav#minNavs
          mixin liItem(url, text)
            li
              a(href=url)=text
          +liItem('/pay/banks/', '我要充值')
          +liItem('/pay/withdraw/', '我要提现')
          +liItem('/accounts/auto_tender/', '自动投标')
          +liItem('/accounts/transaction/p2p/', '交易记录')

    .g-nav-box
      mixin nav-item(name, link, news)
        if activeItem == name
            a.highlight(href=link)= name
              if news
                img(src='/static/imgs/pc/nav/new_gif.gif').nav-news
        else
            a(href=link)= name
              if news
                img(src='/static/imgs/pc/nav/new_gif.gif').nav-news

      +nav-item('首页', '/')
      +nav-item('理财专区', '/p2p/list/')
      +nav-item('贷款专区', '/finance/')
      +nav-item('风险控制', '/security')

