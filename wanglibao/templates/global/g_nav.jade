.g-nav-warp
  .g-nav.g-year-layout
    a(href="/").g-logo-box
      img(src="/static/imgs/pc/logo/logo_80.jpg?v=2", alt='网利宝', class='logo_l')
      img(src="/static/imgs/pc/logo/logo_60.jpg?v=2", alt='网利宝', class='logo_s')
    .g-user-warp
      .g-user
        if activeItem == "我的账户"
          myacount = 'highlight'
        a(href="/accounts/home/", class='{{myacount}}').user-nav
          if user.is_authenticated
            i.user-icon-img-active
          else
            i.user-icon-img
          span.user-text 我的账户
          i.icon.iconfont.icon-down
        ul.g-nav-user-nav.user-nav-hover#minNavs
          mixin liItem(url, text)
            li
              a(href=url)=text
          +liItem('/pay/banks/', '我要充值')
          +liItem('/pay/withdraw/', '我要提现')
          +liItem('/accounts/auto_tender/', '自动投标')
          +liItem('/accounts/transaction/p2p/', '交易记录')

    .g-nav-box
      mixin nav-item(className, name, link, smallNav, news)
        if activeItem == name
          .g-nav-list(class=className)
            a.highlight(href=link, class='nav-a')= name
              if news
                img(src='/static/imgs/pc/nav/new_gif.gif').nav-news
              if smallNav == 'list'
                  i.icon.iconfont.icon-down
            if smallNav == 'list'
              ul.g-nav-user-nav.list-nav-hover
                mixin smallNav(url, text)
                  li
                    a(href=url)=text
                +smallNav('/ylb/monthly.php', '月利宝')
                +smallNav('/pay/withdraw/', '散标')
                +smallNav('/ylb/exchange.php', '转让标')

        else
            .g-nav-list(class=className)
              a(href=link, class='nav-a')= name
                if news
                  img(src='/static/imgs/pc/nav/new_gif.gif').nav-news
                if smallNav == 'list'
                  i.icon.iconfont.icon-down
              if smallNav == 'list'

                ul.g-nav-user-nav.list-nav-hover
                  mixin smallNav(url, text)
                    li
                      a(href=url)=text
                  +smallNav('/ylb/monthly.php', '月利宝')
                  +smallNav('/pay/withdraw/', '散标')
                  +smallNav('/ylb/exchange.php', '转让标')


      +nav-item('nav-index', '首页', '/')
      +nav-item('nav-p2p', '理财专区', '/p2p/list/', 'list')
      +nav-item('nav-dai', '贷款专区', '/finance/')
      +nav-item('nav-area', '活动专区', '/activity/area/')
      +nav-item('nav-security', '安全保障', '/security')
  .g-nav-multicolour-line


