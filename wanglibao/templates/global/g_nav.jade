.g-nav-warp
  .g-nav.g-year-layout
    a(href="/").g-logo-box
      img(src="/static/imgs/pc/logo/logo_80.jpg?v=2", alt='网利宝', class='logo_l')
      img(src="/static/imgs/pc/logo/logo_60.jpg?v=2", alt='网利宝', class='logo_s')
    .g-user-warp
      .g-user
        if activeItem == "我的账户"
          myacount = 'highlight'
        a(href="javascript:void(0)", class='{{myacount}}')#checkUserType.user-nav
          if user.is_authenticated
            i.user-icon-img-active
          else
            i.user-icon-img
          span.user-text 我的账户
          i.icon.iconfont.icon-down
        if user.wanglibaouserprofile.utype == '3'
            if user.wanglibaouserprofile.id_is_valid
                ul.g-nav-user-nav#minNavs
                  mixin liItem(url, text)
                    li
                      a(href=url)=text
                  +liItem('/pay/banks/', '我要充值')
                  +liItem('/pay/withdraw/', '我要提现')
                  if user.wanglibaouserprofile.utype != '3'
                    +liItem('/accounts/auto_tender/', '自动投标')
                  +liItem('/accounts/transaction/p2p/', '交易记录')
        else
            ul.g-nav-user-nav#minNavs
              mixin liItem(url, text)
                li
                  a(href=url)=text
              +liItem('/pay/banks/', '我要充值')
              +liItem('/pay/withdraw/', '我要提现')
              if user.wanglibaouserprofile.utype != '3'
                +liItem('/accounts/auto_tender/', '自动投标')
              +liItem('/accounts/transaction/p2p/', '交易记录')

    .g-nav-box
      mixin nav-item(name, link, news)
        if activeItem == name
            a.highlight(href=link)= name
              if news
                img(src='/static/imgs/pc/nav/new_gif.gif').nav-news
        else
            a(href=link)= name
              if news
                img(src='/static/imgs/pc/nav/new_gif.gif').nav-news

      +nav-item('首页', '/')
      +nav-item('理财专区', '/p2p/list/')
      +nav-item('贷款专区', '/finance/')
      +nav-item('活动专区', '/activity/area/')
      +nav-item('安全保障', '/security')

