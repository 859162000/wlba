
.g-nav-warp
  .g-nav.mod.clearfix
    a(href="/").g-logo-box
      img(src="/static/imgs/pc/logo/logo.jpg", alt='logo')
    .g-user-warp.fr
      .g-user
        a(href="/accounts/home").user-nav
          i.icon.iconfont.icon-user
          span.font.s.user-text 我的账户
          i.icon.iconfont.icon-down
        ul.hide.g-nav-user-nav
          mixin liItem(url, text)
            li
              a(href=url)=text
          +liItem('/pay/banks/', '我要充值')
          +liItem('/pay/withdraw/', '我要提现')
          +liItem('/accounts/auto_tender/', '自动投标')
          +liItem('/accounts/transaction/p2p/', '交易纪录')
          if user.is_authenticated
            li
              a(href='/accounts/logout?next=/') 退出
    .g-nav-box
      mixin nav-item(name, link)
        if not name
            a.highlight(href=link)= name
        else
            a(href=link)= name
      +nav-item('首页', '/')
      +nav-item('理财专区', '/p2p/list/')
      +nav-item('优惠活动', '/accounts/auto_tender/ ')
      +nav-item('安全保障', '/security')
      +nav-item('帮助中心', '/help')


