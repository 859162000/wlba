.top-bar
  .top-bar-container
    .top-bar-phone
      span.header-phone-text.icon-phone 400-123-8889
    .user-info
      if user.is_authenticated
        span 欢迎您，
        a.username(href="/accounts/home")
          if user.email
            | {{ user.email }}
          else
            | {{ user.wanglibaouserprofile.phone }}
        span.white-v-line
        a.logout(href="/accounts/logout?next={{ request.path }}") 退出
      else
        a(href="/accounts/login?next={{ request.path }}") 登录
        span.white-v-line
        a(href="/accounts/register") 注册
