ul.sidebar
  mixin sidebar-item(name, link, expected_title)
    if title == expected_title
      li.sidebar-item.active
        a(href=link)= name
    else
      li.sidebar-item
        a(href=link)= name
  p.sidebar-title 理财建议
  div
    +sidebar-item('理财小白必读', '/newbie', '理财小白必读')
    +sidebar-item('资产配置', '/why_portfolio', '资产配置')
    +sidebar-item('选择理财产品', '/howto', '选择理财产品')
