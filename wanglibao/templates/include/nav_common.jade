.nav-items
  ul
    mixin nav-item(name, link)
      if activeItem == name
        li.nav-item.active
          a.nav-item-anchor(href=link)= name
      else
        li.nav-item
          a.nav-item-anchor(href=link)= name

    +nav-item('首页', '/')
    +nav-item('信托', '/trust/home')
    +nav-item('基金', '/fund/products')
    +nav-item('免费定制个人方案', '/portfolio')
