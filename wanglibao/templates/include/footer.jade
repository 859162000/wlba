        dt.section--title 关于网利宝
        dd.section--item
          a(href="/about") 关于我们
        dd.section--item
          a(href="/team") 管理团队
        dd.section--item
          a(href="/partner") 战略合作伙伴
        dd.section--item
          a(href="/milestone") 网利宝大事记

      dl.footer-section-no-border
        dt.section--title &nbsp;
        dd.section--item
          a(href="/responsibility") 企业社会责任
        dd.section--item
          a(href="/hiring") 招贤纳士
        dd.section--item
          a(href="/contact_us") 联系方式

      dl.footer-section
        dt.section--title 关注我们
        dd.section--item
          span 官方QQ讨论群
        dd.section--item
          span 362121062

      dl.footer-section.contact-section
        .icon-phone-footer.font-xxxl
        .footer--phone 4008-588-066
        p 客服热线 9:00 - 21:00

        .space-vertical-s
        a.topbar-anchor.icon.icon-weibo(href="http://weibo.com/u/5000682691", target="_blank", data-role="hover", data-target="#qrweibo")
        .space-s
        a.icon.icon-weixin(href="javascript:void(0)", data-role="hover", data-target="#qrcode")
        a#qrweibo.footer--weibo-qr-code(href="javascript:void(0)", style="display:none")
          img(src="/static/images/weibo-qr.png")
        img#qrcode.footer--weixin-qr-code(src="/static/images/weixin-qr.png", style="display:none")

