mixin sidebar-item(name, link, expected_title)
  if title == expected_title
    li.sidebar-item.active
      a= name
  else
    li.sidebar-item
      a(href=link)= name

ul.sidebar
  p.sidebar-title 关于网利宝
  div
    +sidebar-item('关于我们', '/about', '关于我们')
    +sidebar-item('管理团队', '/team', '管理团队')
    +sidebar-item('招贤纳士', '/hiring', '招贤纳士')
    +sidebar-item('联系方式', '/contact_us', '联系方式')

