-load formatters

doctype html
html
  head
    - with '网利宝' as title
    include include/common_head
    - endwith
    meta(name="keywords", content="网利宝")
    meta(name="description", content="网利宝是针对中国中产阶级人群的一站式网络理财服务平台，网利宝把国外传统的“私人银行”模式引入中国，我们通过独有的用户投资专业评估体系和个人理财数据分析算法，利用PC和移动互联网等方式，为客户提供个性化投资产品推荐，降低理财门槛，提高投资者的理财收益水平。")

  body
    include include/header
    - with '首页' as activeItem
    include include/navigation
    - endwith

    .full-container-home.clearfix
      .home-banner-1
      .home-banner-3
      ul.background-anchors
        li
          a.background-anchor.active(href="#") x
        li
          a.background-anchor(href="#") x
      .container-home
        .portfolio-container
          table
            thead.portfolio-thead
              tr
                td(colspan='2', style='text-align: left') 我的理财方案
            tbody
              tr
                td 投资金额：
                td
                  .portfolio-td-last
                    input.portfolio-input#portfolio-asset(type='text' value='30')
                    span 万元
              tr
                td 投资期限：
                td
                  .portfolio-td-last
                    input.portfolio-input#portfolio-period(type='text' value='3')
                    span 个月
              tr
                td 风险承受能力：
                td
                  .portfolio-td-last
                    select.portfolio-input#portfolio-risk
                      option(value='1') 不能承担任何风险
                      option(value='2') 可以承担极小的风险
                      option(value='3') 可以承担一定风险
                      option(value='4') 可以承担较大的风险来追求高收益
                      option(value='5') 绝对追求高收益
              tr
                td(colspan='2')
                  .portfolio-td-last
                    button.portfolio-submit(type='submit') 定制方案

    .space-vertical-m

    .container.home-product-fund.clearfix
      .pull-left.fund-img
        img(src="/static/images/home_moneyfund.jpg", alt="货币基金")
      .pull-right.fund-content
        .fund-content-buy
          .fund-buy-hot
            .fund-buy-normal.margin-left-m
              h1.bold 高收益南方货币
              h3 银行活期利率
              p.font-m
                span.fund-num-large 16.5
                倍
              p
                七日年化收益：
                span.dark-gray 5.42%
              p
                已有
                span.dark-gray 421人
                申购
              p
                a.button.button-middle.red-bg.fund-button-l(href="#", target="_blank") 立即预约
            ul.fund-hot-ul
              li
                取现到帐：
                span.dark-gray T+0实时到帐
              li
                起购金额：
                span.dark-gray 50万
              li
                半年涨幅：
                span.dark-gray 13%
              li
                一年涨幅：
                span.dark-gray 15%
              li
                万元效益：
                span.dark-gray 3000元

          .fund-buy-normal.fund-border-left
            h1.bold 高收益南方货币
            h3 银行活期利率
            p.font-m
              span.fund-num-large 16.5
              倍
            p
              七日年化收益：
              span.dark-gray 5.42%
            p
              已有
              span.dark-gray 421人
              申购
            p
              a.button.button-middle.gray-bg.fund-button-m(href="#", target="_blank") 售完

          .fund-buy-normal.fund-border-left
            h1.bold 高收益南方货币
            h3 银行活期利率
            p.font-m
              span.fund-num-large 16.5
              倍
            p
              七日年化收益：
              span.dark-gray 5.42%
            p
              已有
              span.dark-gray 421人
              申购
            p
              a.button.button-middle.red-bg.fund-button-m(href="#", target="_blank") 抢购
        .fund-content-icon
          img(src="/static/images/home_moneyfund_icon.jpg", alt="")



    .space-vertical-m

    .container.home-product-fund.clearfix
      .pull-left.fund-img
        img(src="/static/images/home_trustfund.jpg", alt="信托基金")
      .pull-right.fund-content
        .fund-content-buy
          .fund-buy-hot
          .fund-buy-normal
        .fund-content-icon
          img(src="/static/images/home_trustfund_icon.jpg", alt="")


    .space-vertical-m

    .container-card-holder
      span.font-l 热门产品
      ul.tabs
        li.tab-item
          a.tab-anchor.active(data-toggle="trust-products" href="#") 信托产品
        li.tab-item
          a.tab-anchor(data-toggle="financing-products" href="#") 银行理财
        li.tab-item
          a.tab-anchor(data-toggle="fund-products" href="#") 基金产品

    .space-vertical-xs

    .container-hidden#trust-products
      each hot_trust in hot_trusts
        -with hot_trust.trust as trust
        a(href='/trust/detail/{{trust.id}}')
          .card
            .card-top-container
              p.card-title 高收益精选
              .space-vertical-s
              img.card-annotation(src="/static/images/on-sale.png")
              span.trust-name {{trust.short_name}}
            .card-detail-box
              dt 产品期限:
              dd.orange-text {{trust.period | month}}
              dt.profit-title 投资收益:
              dd.profit-text {{trust.expected_earning_rate | percentage}}
              .space-vertical-s
              .space-vertical-s.dashed-line
              if trust.brief
                dt 点评:
                dd.card-brief {{trust.brief}}
              else
                dd.card-brief
        -endwith
      .check-more
        a.button-round-mini.button-red(href="/trust/products") 查看更多

    .container-hidden#financing-products
      each hot_financing in hot_financings
        -with hot_financing.bank_financing as financing
        a(href='/financing/detail/{{financing.id}}')
          .card
            .card-top-container
              p.card-title 高收益精选
              .space-vertical-s
              img.card-annotation(src="/static/images/on-sale.png")
              span.trust-name {{financing.short_name}}
            .card-detail-box
              dt 产品期限:
              dd.orange-text {{financing.period | day}}
              dt 发行银行:
              dd.orange-text {{financing.bank.name}}
              dt.profit-title 预期收益:
              dd.profit-text {{financing.expected_rate | percentage}}
              .space-vertical-s
        -endwith
      .check-more
        a.button-round-mini.button-red(href="/financing/products") 查看更多

    .container-hidden#fund-products
      each hot_fund in hot_funds
        -with hot_fund.fund as fund
        a(href='/fund/detail/{{fund.id}}')
          .card
            .card-top-container
              p.card-title 高收益精选
              .space-vertical-s
              img.card-annotation(src="/static/images/on-sale.png")
              span.trust-name {{fund.name}}
            .card-detail-box
              dt 基金公司:
              dd {{fund.issuer.name}}
              dt 基金类型:
              dd {{fund.type}}
              if fund.rate_7_days
                dt.profit-title 七日年化利率:
                dd.profit-text {{fund.rate_7_days | percentage}}
              else
                dt.profit-title 当日涨幅:
                dd.profit-text {{fund.rate_today | percentage}}
              .space-vertical-s
        -endwith
      .check-more
        a.button-round-mini.button-red(href="/fund/products") 查看更多

    .row
      img(src="http://wanglibao.oss-cn-hangzhou.aliyuncs.com/images/banner0.jpg", style="margin:0 auto; display: block", alt="网利宝 网上银行")

    - with 1 as no_margin
    include include/footer
    - endwith

    script.
      require(['/static/js/index.js'])

    include include/tracking