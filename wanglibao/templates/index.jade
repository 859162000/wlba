-load formatters

doctype html
html
  - with '首页' as title
  include include/head
  - endwith

  body
    include include/header
    - with '首页' as activeItem
    include include/navigation
    - endwith

    .full-container-home
      .container-home
        .portfolio-container
          table
            thead.portfolio-thead
              tr
                td(colspan='2', style='text-align: left') 我的理财方案
            tbody
              tr
                td 投资金额：
                td.portfolio-td-last
                  input.portfolio-input(type='text')
                  span 万元
              tr
                td 投资期限：
                td.portfolio-td-last
                  input.portfolio-input(type='text')
                  span 个月
              tr
                td 风险承受能力：
                td.portfolio-td-last
                  select.portfolio-input
                    option() 不能承担任何风险
                    option() 可承担一定的风险来换取较高的收益
                    option() 可以承担很大的风险来追求高收益

              tr
                td.portfolio-td-last(colspan='2')
                  button.portfolio-submit(type='submit') 定制方案

    .space-vertical-m

    .container-card-holder
      span.font-l 热门产品
      ul.tabs
        li.tab-item
          a.tab-anchor.active(data-toggle="trust-products" href="#") 信托产品
        li.tab-item
          a.tab-anchor(data-toggle="financing-products" href="#") 银行理财
        li.tab-item
          a.tab-anchor(data-toggle="fund-products" href="#") 基金产品

    .space-vertical-xs

    .container#trust-products
      each hot_trust in hot_trusts
        -with hot_trust.trust as trust
        .card
          .card-top-container
            p.card-title 高收益精选
            .space-vertical-s
            img.card-annotation(src="/static/images/on-sale.png")
            img.bank-logo(src="/static/images/pingan-logo.png")
          .card-detail-box
            .card-product-name {{trust.name}}
            dt 产品期限:
            dd.orange-text {{trust.period | month}}
            dt.profit-title 投资收益:
            dd.profit-text {{trust.expected_earning_rate | percentage}}
            .space-vertical-s
            .space-vertical-s.dashed-line
            dt 点评:
            dd {{trust.brief}}
        -endwith

    .container#fund-products
      each hot_fund in hot_funds
        -with hot_fund.fund as fund
        .card
          .card-top-container
            p.card-title 高收益精选
            .space-vertical-s
            img.card-annotation(src="/static/images/on-sale.png")
            img.bank-logo(src="/static/images/pingan-logo.png")
          .card-detail-box
            .card-product-name {{fund.name}}
            dt.profit-title 七日年化利率:
            dd.profit-text {{fund.rate_7_days | percentage}}
            .space-vertical-s
            .space-vertical-s.dashed-line
            dt 点评:
            dd {{fund.brief}}
        -endwith

    .container#financing-products
      each hot_financing in hot_financings
        -with hot_financing.bank_financing as financing
        .card
          .card-top-container
            p.card-title 高收益精选
            .space-vertical-s
            img.card-annotation(src="/static/images/on-sale.png")
            img.bank-logo(src="/static/images/pingan-logo.png")
          .card-detail-box
            .card-product-name {{financing.name}}
            dt.profit-title 七日年化利率:
            dd.profit-text {{financing.expected_rate | percentage}}
            .space-vertical-s
            .space-vertical-s.dashed-line
            dt 点评:
            dd {{financing.brief}}
        -endwith

    .space-vertical-m
    include include/footer

    script.
      require(['/static/js/index.js'])

    include include/tracking