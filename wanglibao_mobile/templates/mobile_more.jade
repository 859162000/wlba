    .m-more-card
      mixin card-style(cardUrl, iconUrl, tit, redTxt, huiTxt)
        .assets-fn-list
          a.assets-card(href=cardUrl)
            i(class=iconUrl)
            .assets-fn-body
              .fn-body-tit=tit
              .fn-body-on
              if redTxt
                .fn-body-money
                  span.red=redTxt
                  if huiTxt
                    span.hui=huiTxt
      .m-more-list
        +card-style('javascript:void(0)', 'assets-icon', '邀请好友', '邀请好友送话费')
        +card-style('javascript:void(0)', 'assets-icon', '评分支持')
      .m-more-list
        +card-style('javascript:void(0)', 'assets-icon', '客服电话', ' ', '4008-588-066')
        +card-style('javascript:void(0)', 'assets-icon', '关于网利宝')
        +card-style('javascript:void(0)', 'assets-icon', '提交反馈')
        +card-style('javascript:void(0)', 'assets-icon', '检查更新', ' ', '当前版本为v2.3.1')
