  script.
    var tab = document.querySelectorAll(".tab-bor");
    var cont = document.querySelectorAll(".cont-bor");
    var classname = ['m-tab-left','m-tab-right'];
    for(var i=0;i< tab.length;i++){
        tab[i].onclick=function(num){
            return function(){
                for(var j=0;j< cont.length;j++){
                    cont[j].style.display= "none";
                    tab[j].className = classname[j] + " tab-bor";
                }
                tab[num].className = tab[num].className +" m-tab-active";
                cont[num].style.display= "block";
            }
        }(i)
    }
