-load formatters
doctype html
html(style='background:#f5f5f5')
  head
    include include/app_header.jade
  body
    //banner
    aside.ios-banner
      .swiper-container
        .swiper-wrapper
          for item in banner
            if item.link
              linkURL = item.link
            else
              linkURL = "javascript:void(0)"
            a(href="{{linkURL}}").swiper-slide
              img(data-src="/media/{{item.image}}", class="swiper-lazy")
              .swiper-lazy-help
        .swiper-pagination
    //activity item
    article.ios-main
      title 最新活动
      mixin item(url, imgUrl, title, explain, time, overdue)
        section.ac-item
          a(href=url)
            img(src=imgUrl).activity-img
            .item-text
              h4.item-h4=title
              p.item-explain=explain
              p.item-time=time
          if overdue == 'close'
            img(src='/static/imgs/app/discover/overdue.png').mask
      +item('/activity/app_gold_season/', '/static/imgs/app/discover/discover_p_gold.jpg', '全民淘金季', '邀请好友获3‰的奖金，好友再邀请他人，同样获3‰的双重奖金。', '2015.06.23 至 2016.06.30', 'open')
