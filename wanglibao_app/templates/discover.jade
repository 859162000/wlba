doctype html
html(style='background:#f5f5f5')
  head
    include include/app_header.jade
  body
    //banner
    aside.ios-banner
      .swiper-container
        .swiper-wrapper
          for item in banner
            a(href="{{item.link}}").swiper-slide
              img(data-src="/media/{{item.image}}", class="swiper-lazy")
              .swiper-lazy-help
        .swiper-pagination
    //activity item
    article.ios-main
      title 最新活动
      mixin item(url, imgUrl, title, explain, time)
        section.ac-item
          a(href=url)
            img(src=imgUrl)
            .item-text
              h4.item-h4=title
              p.item-explain=explain
              p.item-time=time

