- load formatters
doctype html
- with '理财产品详情' as title
include include/head
- endwith
body
  include include/header
  - with '理财产品' as activeItem
  include include/navigation
  - endwith
  .sub-navbar
    .sub-navbar--list
      ul
        li.sub-navbar--list-item
          a.sub-navbar--anchor(href="{%url 'financing_home'%}") 理财首页
        li.sub-navbar--list-item
          a.sub-navbar--anchor.active(href="{%url 'financing_products'%}") 理财产品
  .container
    .span8.panel-nopadding.panel-header
      .panel-product-title-bar
        .panel-product-title
          .product-title.ispan11 {{ financing.name }}
          if is_favorited != 1
            a#addToFavorite.button-mini.button-pink.pull-right(href="#", data-id="{{financing.id}}", data-is-favorited="{{is_favorited}}")收藏
          else
            a#addToFavorite.button-mini.button-pink.pull-right(href="#", data-id="{{financing.id}}", data-is-favorited="{{is_favorited}}")取消收藏

      .row
        .span7
          .well
            .row
              dl.span6.key-value
                dt 销售币种：
                dd {{ financing.currency }}
              dl.span6-omega.key-value
                dt 收益类型：
                dd {{ financing.profit_type }}
            .row
              dl.span6.key-value
                dt 是否保本：
                if financing.principle_guaranteed
                  dd 保本
                else
                  dd 不保本
              dl.span6-omega.key-value
                dt 销售状态：
                dd {{ financing.status }}
        .span5-omega
          .span6
            .card-icon
              dl
                dt 预期收益率
                dd.highlight {{ financing.expected_rate | percentage }}
          .span6-omega
            .card-icon
              dl
                dt 产品期限
                dd {{ financing.period }}天
        .row.panel-footer
          .well
            p.pull-left 银行客服电话: {{financing.bank.phone}}

    .span4-omega.panel-nopadding.panel-header
      .panel-product-title-bar
        span.panel-product-title 收益计算器
      form
        .form-row-m.padding-left-s.margin-top-s
          label.form-row-label 投资金额：
          span.ispan4.relative-pos
            input.ispan12(type="text", data-rate="{{financing.expected_rate}}",  /
              data-period="{{financing.period}}", data-target="#earning", data-role="earning-calculator")
            span.absolute-pos.pos-r-s 万
          span &nbsp;&nbsp;&nbsp;预期收益：
          span#earning.highlight 0.0
          span 元

        .form-row-m.padding-left-s
          span.txt-info （起购金额 {{financing.investment_threshold}}万元 递增金额 {{financing.investment_step}}元)

  .panel-nopadding
    .panel-product-title-bar
      .panel-product-title 产品详情
    p.well-s 购买信息
    table.bordered-table
      tbody
        tr
          th 发行银行
          td {{ financing.bank.name }}
          th 发行对象
          td {{ financing.issue_target }}
          th 货币币种
          td {{ financing.currency }}
        tr
          th 投资类型
          td {{ financing.investment_type }}
          th 发行起始日期
          td {{ financing.issue_start_date | date:"Y年n月j日" | na_if_none}}
          th 发行终止日期
          td {{ financing.issue_end_date | date:"Y年n月j日" | na_if_none }}
        tr
          th 委托管理期限
          td {{ financing.period }}天
          th 委托币种起始金额
          td {{ financing.investment_threshold }}万元
          th 起购金额递增单位
          td {{ financing.investment_step }}
        tr
          th 可否质押贷款
          td {{ financing.pledgable | yes_no }}
          th 银行是否可提前终止
          td {{ financing.bank_pre_redeemable | yes_no }}
          th 客户是否可赎回
          td {{ financing.client_redeemable | yes_no }}
        tr
          th 销售地区
          td(colspan="5") {{ financing.region }}
    p.well-s 其他说明
    table.bordered-table
      tbody
        tr
          th(colspan="1") 收益说明
          td(colspan="5") {{ financing.profit_description | linebreaksbr }}
        tr
          th(colspan="1") 申购条件说明
          td(colspan="5") {{ financing.buy_description | linebreaksbr }}
        tr
          th(colspan="1") 银行提前终止条件
          td(colspan="5") {{ financing.bank_pre_redeem_description | linebreaksbr }}
        tr
          th(colspan="1") 赎回规定说明
          td(colspan="5") {{ financing.redeem_description | linebreaksbr }}
        tr
          th(colspan="1") 投资风险说明
          td(colspan="5") {{ financing.risk_description | linebreaksbr }}

  include include/footer
  script.
    require(['/static/js/financing_detail.js'])
  include include/tracking