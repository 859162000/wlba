-load formatters
doctype html
- with '银行理财' as title
include include/head
- endwith
body
  include include/header

  - with '银行理财' as activeItem
  include include/navigation
  - endwith
  .sub-navbar
    .sub-navbar--list
      ul
        li.sub-navbar--list-item
          a.sub-navbar--anchor.active(href="{%url 'financing_home'%}") 理财首页
        li.sub-navbar--list-item
          a.sub-navbar--anchor(href="{%url 'financing_products'%}") 理财产品
  .panel-nopadding
    .panel-title-bar
      .panel-title 热门产品
      a.panel-title-right-item(href="#") 更多

    .container#financing-products
      each hot_financing in hot_financings
        -with hot_financing.bank_financing as financing
        a(href='/financing/detail/{{financing.id}}')
          .card
            .card-top-container
              p.card-title 高收益精选
              .space-vertical-s
              img.card-annotation(src="/static/images/on-sale.png")
              img.bank-logo(src="/media/{{financing.bank.logo}}")
              span.bank-name {{financing.short_name}}
            .card-detail-box
              dt 产品期限:
              dd.orange-text {{financing.period | day}}
              dt.profit-title 七日年化利率:
              dd.profit-text {{financing.expected_rate | percentage}}
              .space-vertical-s
              .space-vertical-s.dashed-line
              dt 点评:
              dd.card-brief {{financing.brief}}
        -endwith

  .panel-nopadding
    .panel-title-bar
      .panel-title 在售产品收益排行
      // ko template: { name: 'tabs', data: tab }
      // /ko

    // ko template: {name: 'sub-tabs', data: subTab }
    // /ko

    .panel-content
      // ko template: { name: 'data-table', data: financingTable }
      // /ko

  include include/footer
  include include/templates

  script.
    require(['/static/js/financing_home.js'])

  include include/tracking
