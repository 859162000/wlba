-load formatters
doctype html
html(style="background: url('/static/imgs/mobile/detail/loginback.png');")
    head
        include include/weixin_head.jade
    body
        header
            hgroup 登录
            a(href="javascript:history.back()")
              span 返回
        .login-top
            .login-top-top
            .login-top-main
                .login-top-circle
                    img(src="/static/imgs/mobile/detail/login.png", alt="").img-one
                img(src="/static/imgs/mobile/detail/loginsize.png", alt="").img-two
        from(action="{% url 'weixin_login_api' %}")#login-form.login-farom
            - csrf_token
            input(name="openid", type="hidden", value="{{ openid }}")
            input(name="captcha_0", type="hidden", value="")
            .login-from-one(style="margin-top: 0;")
                //img(src="/static/imgs/mobile/detail/logininput.png", alt="").img-input
                input(type="text", name="identifier", placeholder="请输入手机号")
            .login-from-error
                .error-identifier(style="display: none; ")
            .login-from-two
                //img(src="/static/imgs/mobile/detail/logininput.png", alt="").img-input
                input(type="password", name="password", placeholder="请输入密码")
            .login-from-error
                .error-password(style="display: none; ")
            .login-from-threed
                .login-from-three
                    //img(src="/static/imgs/mobile/detail/logininput.png", alt="").img-input
                    input(type="text", name="captcha_1", placeholder="点击验证码刷新").login-refresh
                .login-validation
                    img(src="", alt="", width="100%", height="100%, border-radius: 0.3rem")#captcha
            .login-from-error
                .error-captcha(style="display: none;")
            .login-from-four
                button(type="submit") 登录
            .login-footer
                p.login-left
                    a(href="/weixin/regist/") 免费注册
                    //a(href="javascript:void(0)") &nbsp;&nbsp;|&nbsp;&nbsp;
                    //a(href="#") 忘记密码
    script(data-init='login', src="/static/scripts/mobile/dist/mobile.js")



