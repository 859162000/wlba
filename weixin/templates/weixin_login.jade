                input(type="text", name="identifier", placeholder="请输入手机号")
            .login-from-error
                .error-identifier(style="display: none; ")
            .login-from-two
                input(type="password", name="password", placeholder="请输入密码")
            .login-from-error
                .error-password(style="display: none; ")
            .login-from-three
                input(type="text", name="captcha_1", placeholder="点击验证码刷新", maxlength="4").login-refresh
                .login-validation
                    img(src="", alt="", width="100%", height="100%")#captcha
            .login-from-captcha
                .error-captcha(style="display: none; ")
            .login-from-four
                button(type="submit", disabled="disabled") 登入
            .login-footer
                p.login-left
                    a(href="#") 免费注册
