doctype html
html(style='background:#f5f5f5;')
  head
    include include/weixin_head.jade
  body
    header
      hgroup 实名认证

    - with '1' as processnum
    include include/weixin_registProcess
    - endwith

    //表单
    section.form-box.regist-process-form
      //表单单个模版
      .form-list
        .form-icon.authentication-name.name-icon
        .form-input
          input(type="text",name="name", placeholder="请输入您的姓名", data-target2='authentication-name', data-icon='name-icon').check-list
          .form-edit-icon
      .form-mg-first
      .form-list
        .form-icon.authentication-card.idcard-icon
        .form-input
          input(type="tel",name='idcard',value=phoneValue, placeholder="请输您的身份证号", data-target2='authentication-card', data-icon='idcard-icon', data-target="identifier-edit", data-empty='', data-val='input-clear').check-list
          .form-edit-icon.identifier-edit

      //账户安全
      section.regist-safe.regist-process-safe
        span 账户资金安全由阳光保险承保

      section#shiming.login-submit
        button(type="submit", disabled=true) 实名认证

    section.back-index-warp
      a(href='/weixin/list/').back-index 暂不认证，返回首页

    script(data-init='processFirst', src="/static/scripts/mobile/dist/mobile.js?v=2021521207")