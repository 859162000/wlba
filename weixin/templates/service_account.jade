//-load formatters
doctype html
html
  head
    title 我的账户
    include include/service_head.jade
  body
    .account-assets
      .account-assets-list
        p.assets-one-monery 总资产(元)
        //p.assets-one-yuan
      .account-assets-list
        p.earning-name.mg-bot 累计收益：
        //p.earning-val.mg-bot
        p.line.mg-bot
        p.earning-name.mg-bot 待收收益：
        //p.earning-val.mg-bot
    .account-balance.account-ma-bt
      .account-balance-body
        p.balance-name 账户余额 （元）
        //p.balance-num
      .account-balance-recharge
        a(href='/weixin/recharge/?rechargeNext=/weixin/account/').account-recharge 充值

    .account-item
      mixin item(img, title, url)
        a(href=url).account-card-list
          i.i-ma-rt
            img(src=img)
          .card-title=title
          .arrow-right
      +item('/static/imgs/sub_weixin/account/project.png', '已投项目', '/weixin/transaction/repaying/')
      +item('/static/imgs/sub_weixin/account/reward.png', '理财券', '/weixin/reward/unused/')
      +item('/static/imgs/sub_weixin/account/safe.png', '账户安全', '/weixin/security/')

    .account-logou
      a(href="/accounts/logout?next=/weixin/list/").account-exit 安全退出
    //账户安全
    section.regist-safe.grey-safe
      span 账户资金安全由阳光保险承保