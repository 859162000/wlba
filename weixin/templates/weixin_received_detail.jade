-load formatters
doctype html
html(style="background: #f5f5f5")
  head
    include include/weixin_head.jade
  body
    header
      hgroup 还款明细
      a(href="javascript:history.back()")
        span 返回
    .received-item
      .received-list
        .list-head-warp
          .list-head
            .head-space &nbsp&nbsp
            span.head-name 企业资金周转企业资金周

        .list-nav
          ul
            li.item-date 时间
            li 本金(元)
            li 利息(元)
            li.item-count 总计(元)
        .detail-space-grep
        mixin list(back)
          .detail-list
            .detail-item.item-date 2015-07-09
            .detail-item 1000.00
            .detail-item 1.00
              span +
              span.blue-text 0.66
              span.blue-sign 加息
            .detail-item.item-count 101231.00
            if back
              .repayment-icon

        +list('1')
        +list()
        +list('1')
        +list()

