-load formatters
-load mathfilters
-load widget_tweaks
doctype html
html
  head
    title weixin-detail
    include include/weixin_head.jade
  body
    header
      hgroup 产品详情
      section
        a(href="javascript:history.back()") 返回
    .detail-animate
      earning_rate = float(p2p.expected_earning_rate)
      percent = float(p2p.ordered_amount) / p2p.total_amount * 100
      if p2p.activity
        earning_rate = earning_rate + float(p2p.activity.rule.percent_text)
      span.circle-profit
        .profit-txt
          em {{earning_rate}}
            i %
          br
          |年化收益
      span.circle-time
        .time-txt
          em {{p2p.period}}
            i 个月
          br
          |还款期限
      span.circle-progress
        .percent-txt {{percent | percentage}}
        .progress-percent(data-percent='{{percent}}')
      p.bannerBottom

    .detail-title
      h4 {{p2p.name}}
      .product-money
        .all-money
          p
            em {{p2p.total_amount | money_format_int}}
            |元
          p 融资金额
        .surplus-money
          p
            em {{orderable_amount|money_format_int}}
            |元
          p 剩余可投金额
    .detail-table
      ul
        li
          span 合作机构
          span {{p2p.warrant_company.name}}
        li
          span 还款方式
          span {{p2p.display_payback_method}}
        li
          span 剩余时间
          span {{p2p.end_time | timedelta_now_day }}
        li
          span 购买人数
          span
            em {{total_buy_user}}
            |人参与
    .detail-toggle
      if p2p.extra_data
        r = p2p.extra_data.items()
        for section_name, section_values in r
          .detail-toggle-list
            h4.toggleTab {{section_name}}
              span
            for item_name in section_values
              dl.toggleDl
                dt
                 span
                 |{{item_name}}
                item_value = section_values[item_name]
                dd {{item_value|linebreaksbr}}
    status = p2p.display_status
    if status == '抢购中'
      statusClass = 'footerBtn-buy'
    elif status == '已还款'
      statusClass = 'footerBtn-grey'
    elif status == '还款中'
      statusClass = 'footerBtn-lightblue'
    else
      statusClass = 'footerBtn-red'
    .detail-footerBtn(class=statusClass)
      if status == '抢购中'
        span
      p {{status}}
  script(src="/static/src/mobile/lib/zepto/zepto.js")
  script(src="/static/src/mobile/lib/weixin/wx.js")
  script(data-init='detail' src="/static/src/mobile/mobile.js")


