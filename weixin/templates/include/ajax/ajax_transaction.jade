-load formatters
-load mathfilters

for record in results
  .transaction-list
    .transaction-tit
      .tit-name {{record.equity_product_short_name}}
      .tit-time {{record.equity_created_at}}
    .transaction-cont
      .cont-money-left
        p {{record.equity_equity}}
        p 投资金额（元）
      .cont-money-center
        p {{record.equity_paid_interest}}
        p 已收金额（元）
      .cont-money-right
        p {{record.equity_total_interest}}
        p 待收金额（元）
    if record.has_link
      .transaction-footer
        a(href="") 还款计划
        a(href="{{record.equity_contract}}") 合同

