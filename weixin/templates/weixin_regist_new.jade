doctype html
html(style="background: #f5f5f5")
  head
    include include/weixin_head.jade
  body
    header
      hgroup 注册网利宝

    //banner
    section.regist-banner
      if channel and channel.image
        img(src='/media/{{channel.image}}')
      else
        img(src='/static/imgs/mobile/regist/regist_weixin_banner.jpg')


    //表单
    section.form-box
      if phone
        phoneValue = phone
      else
        phoneValue = ''
      //表单单个模版
      .form-list
        .form-icon.user-phone.identifier-icon
        .form-input
          input(type="tel",name='identifier',value=phoneValue, placeholder="请输入手机号", data-target2='identifier-icon', data-icon='user-phone', data-target="identifier-edit", data-empty='', data-val='input-clear')
          .form-edit-icon.identifier-edit
      .form-code
        .form-list.form-validation
          .form-icon.user-validation.captcha_1-icon
          .form-input
            input(type="text", name="captcha_1", placeholder="请输入计算结果", data-target2='captcha_1-icon', data-icon='user-validation', data-target="regist-validation", data-empty='regist-validation-disable', data-val='')
            input(name="captcha_0", type="hidden", value="")
        .login-validation
          img(src="", alt="", width="100%", height="100%")#captcha
      .form-code
        .form-list.form-validation
          .form-icon.user-validation.validation-icon
          .form-input
            input(type="text",name="validation", placeholder="请输入验证码",data-target2='validation-icon', data-icon='user-validation')
        .login-validation
          button(type="button").request-check.regist-validation.regist-validation-disable 获取验证码
      .form-list
        .form-icon.user-password.password-icon
        .form-input
          input(type="password", name="password", placeholder="请设置密码",data-target2='password-icon', data-icon='user-password')
          .form-edit-icon.password-handle.hide-password
      .form-list
        .form-icon.user-invitation.invitation-icon
        .form-input
          input(type="text",name="invitation", placeholder="请填写邀请码，若无，请忽略", data-target2='invitation-icon', data-icon='user-invitation')
          input(type="hidden", name="token", id="token", value="{{token}}")
          .form-edit-icon

      //账户安全
      section.regist-safe
        span 账户资金安全由阳光保险承保
         //注册按钮
      section#regist-submit.login-submit
        button(type="submit", disabled=true) 立即注册 ｜ 领取奖励
      //注册协议
      section.regist-protocol-n
        span.checkbox.agreement#agreement
          input(type='checkbox',name='agreement', checked=true)
        span.xieyi-btn 同意网利宝注册协议
        if next == ''
          a(href="/weixin/login/").regist-for-login 立即登录
        else
          a(href="/weixin/login/?next={{next}}").regist-for-login 立即登录
    //宣传文案
    section.regist-propagate
      ul
        mixin li(imgName, title, bodyTxt1, bodyTxt2)
          li
            span(class=imgName)
            h4=title
            p=bodyTxt1
            p=bodyTxt2
        +li('trust', '信赖', 'IDG资本A轮投资', '100%本息保障')
        +li('authority', '权威', 'A股百亿上市公司', '鸿利光电投资入股')
        +li('safe', '安全', '账户资金安全', '由阳光保险承保')
        +li('profit', '高收益', '37倍银行活期收益', '100元起投0手续')
    //公司地址
    section.regist-adress
      .adress-top
        .company-adress 北京网利科技有限公司
        .company-phone  010-84417763
      .adress-bottom 北京市朝阳区东三环北路乙2号海南航空大厦A座7层
    //协议内容
    section.regist-protocol-div
      header.xieyi-head
        hgroup 注册协议
        a(href="javascript:void(0)").cancel-xiyie
          span 返回
      article.xieyi-cont
        include include/weixin_xieyiFixed
    include include/app_down
    include include/tracking
    script(data-init='regist', src="/static/scripts/mobile/dist/mobile.js?v=20150821")
