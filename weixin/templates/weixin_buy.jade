-load formatters
doctype html
html
    head
        include include/weixin_head.jade
    body
        header
            hgroup 购买
            a(href="/weixin/detail/{{p2p.id}}/")
               span 返回
        .buy-invest
            p.invest-one 企业经营借款（一期）抢标有奖
            h2 ￥{{orderable_amount|money_format}}
            p.invest-two 可投资金额
        .buy-balance
            .buy-balance-one
                p.balance-left 可用余额
                input(type="text", name="", value="{{user_margin|money_format}}", disabled).balance-middle
                a(href="#").balance-right 元
            .buy-balance-two
                p.balance-left 投资金额
                //input(type="text", name="", value="{{amount}}").balance-middle
                input(type="tel", value= " {{amount}} " ,placeholder="输入100的整数被金额",p2p-type="{{p2p.category}}",data-max="{{orderable_amount}}",data-role="p2p-calculator",fee-target="#xunlei-vip-income-head",data-target="#expected_income", data-existing="0", data-rate="{{p2p.expected_earning_rate}}", data-period="{{p2p.period}}", data-paymethod="{{p2p.pay_method}}", activity-rate="{{p2p.activity.rule.percent_text}}", maxlength="8").balance-middle
                p.balance-right 元
            .buy-balance-three
                p.balance-left 可用红包
                .balance-middle
                    .balance-middle-select
                      redpack_num = len(redpack['packages']['available'])
                      select(name="type" class="").balance-middle-select-select
                        option 不使用红包
                        for redpack in redpack.packages.available
                          option(value='{{redpack.id}}') {{redpack.name}}
        .buy-earnings
            p.earnings 预期收益：
              em#expected_income 0.00
              |元
        .buy-snap-up
            a(href="#").snap-up 确认抢购
        if user_margin <= 0
          .buy-sufficient
            p
             |余额不足，
             span 立即充值

    script(data-init="buy" src="/static/scripts/mobile/mobile.js?v=222")