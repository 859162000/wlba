- load widget_tweaks
- load formatters
doctype html
- with '密码重置' as title
include include/head
- endwith
body.white-background
  .full-container
  .logo-bar
    a(href="/")
      .logo
    span.reset-header-title 找回密码
  .l-activity-panel
    .row
      ul.reset-pass-steps
        li.step.begin 填写账户名
        li.step.pre-active 验证身份
        li.step.active 设置密码
        li.step.end 完成
      .space-vertical-s
      .row
        .prefix3.span6
          form.form-password-reset(method="POST", action="{% url 'password_reset_set_password' %}")
            - csrf_token
            .form-row
              label.reset-form-label 输入新密码：
              .ispan5
                input(placeholder="密码长度为6-20位", title="新密码", name="new_password1", type="password")
            .form-row
              label.reset-form-label 确认密码：
              .ispan5
                input(placeholder="再次输入密码", title="新密码2", name="new_password2", type="password")
            .row.margin-top-m
              button#setPasswordButton.button-password-reset-next-step(type="submit") 下一步

  include include/footer
  script.
    require(["/static/js/set_password.js"])
  include include/tracking