- load widget_tweaks
- load formatters
doctype html
- with '密码重置' as title
include include/head
- endwith
body
  include include/header
  .l-activity-panel
    .well.clearfix
      .row
        ul.reset-pass-steps
          li.step.done 1 填写账户名
          li.step.done 2 验证身份
          li.step.active 3 设置密码
          li.step 4 完成
      .space-vertical-s
      .row(style="text-align:center")
        .ispan4
          .form-title
            label.font-l 请设置新密码
              form(method="POST", action="{% url 'password_reset_set_password' %}")
                - csrf_token
                .form-row
                  input.input-large.ispan8(placeholder="输入新密码", title="新密码", name="password1", type="password")
                .form-row
                  input.input-large.ispan8(placeholder="再次输入密码", title="新密码2", name="password2", type="password")
                .form-row.form-bottom-bar
                  button#setPasswordButton.ispan4.pull-right.button-red.button-middle(type="submit") 设置
  .space-vertical-s
  include include/footer
  script(src="/static/js/require.js" data-main="/static/js/set_password")
  include include/tracking