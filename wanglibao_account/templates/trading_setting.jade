extends account_home_base

- load formatters
- load mathfilters
- load widget_tweaks

block head
  - with '密码管理' as title
  include include/common_head
  - endwith

block sidebar
  - with '密码管理' as activeItem
  include include/user_center_sidebar
  - endwith

block main
  .panel
    .well
        .panel-title-bar__no-border
            .panel-title 密码管理 > 设置交易密码
    .setTradingPwd.back-div
        ul
            li
                label.label1 第1/2步:
                span 身份认证
            li.mt10
                label 真实姓名
                span {{user_profile.name}}
            li
                label 身份证号码
                input(type='text',placeholder="请输入身份证号码",name='id').sfz
                em(style='display:none')#sfzError
                    i
                    |
            li
                label 注册手机号
                span {{user | display_name}}
            li
                .aa.clearfix
                    label 短信验证码
                    input(type='text',placeholder="请输入验证码").yzma
                    button.ispan4-omega.button-orange.button-large#button-get-code-btn-v2(type='button', data-phone="{{user.wanglibaouserprofile.phone}}",tag="2") 获取验证码
                    em(style='display:none')#yzmError
                        i
                .row.voice.hidden.ti80
                    .span12-omega
                      没有收到验证码？请尝试<a href="/api/ytx/send_voice_code/2/" class="voice-validate">语音验证</a>
            li.mt28
                label
                a(href='javascript:void(0)').nextBtn 下一步
    #img-code-div2(style="display:none")
        form#img-code-form.img-code-form(method='post', action='')
            .form-row
                label.img-code-label 请输入验证码：
                input#id_captcha_0(type="hidden", name="captcha_0", autocomplete="off")
                input#id_captcha_1.captcha(type="text", name="captcha_1", autocomplete="off", placeholder="请输入计算结果", maxlength="4")
                img.captcha.captcha-img(alt="captcha", src="")
                button.captcha-refresh(type="button" style='color:rgb(16, 93, 195)') 刷新
            .code-img-error
            .clearfix.tc
                span.submit-code-img#submit-code-img4 确定
  script.
    require(['/static/js/back.js?v=20151023'])


