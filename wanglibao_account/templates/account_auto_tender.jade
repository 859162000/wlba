extends account_home_base

block head
  - with '自动投标' as title
    include include/head

block sidebar
  - with '自动投标' as activeItem
    include include/user_center_sidebar

block main
    .right-content
        .auto-tender 自动投标
        form#tenderForm.tender-form(method="POST",action="/api/home/automatic/")
            .ul-style
                ul.tender-ul-left
                    li
                        label 账户可用余额：
                        b 10,000
                        span 元
                    li
                        label 每次投标金额：
                        input#invest-total(type="hidden", name="invest-total", value="10000")
                        input#invest-money(type="text", name="amounts_auto", autocomplete="off")
                        span 元
                        i.add-ben
                        i.subtract
                    li
                        label 收益范围：
                        input#scope-min.income-range(type="text", name="rate_min", autocomplete="off")
                        span %
                        em -
                        input#scope-max.income-range(type="text", name="rate_max", autocomplete="off")
                        span %
                    li
                        label 收益期限：
                        select#dete-start(name="period_min")
                            option(value='1') 1
                            option(value='2') 2
                            option(value='3') 3
                            option(value='4') 4
                            option(value='5') 5
                            option(value='6') 6
                            option(value='7') 7
                            option(value='8') 8
                            option(value='9') 9
                            option(value='10') 10
                            option(value='11') 11
                            option(value='12') 12
                        span 月
                        span.heng-style -
                        select#dete-end(name="period_max")
                            option(value='1') 1
                            option(value='2') 2
                            option(value='3') 3
                            option(value='4') 4
                            option(value='5') 5
                            option(value='6') 6
                            option(value='7') 7
                            option(value='8') 8
                            option(value='9') 9
                            option(value='10') 10
                            option(value='11') 11
                            option(value='12') 12
                        span 月
                    li
                        label 是否启用：
                        input#is_no.is_no(type="checkbox", name="is_used")
                ul.tender-ul-right
                    li （大于等于500元才可开启自动投标工具）
                    li （该数值须不小于200元，且为100的倍数）
                    li （9%-20%为有效利率范围）
            p.error-style
            .submit-div
               span#submit.submit-style 开启自动投标
block script
  script.
      require(['/static/js/account_auto-tender.js'])
