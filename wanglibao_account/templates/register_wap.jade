-load formatters

doctype html
html
  - with '注册网利宝' as title
  - endwith
  style.
      table {
        width: 100%;
        padding:20px;
      }
      input{
        width:100%;
        height:100px;
        border:1px solid #d9d9d9;
        font-size:30px;
        padding-left:30px;
        padding-right:30px;
        box-sizing:border-box;
        margin-top:15px;
      }
      button{
        width:100%;
        height:100px;
        color:#fff;
        font-size:30px;
        cursor:pointer;
        box-sizing:border-box;
        margin-top:15px;
      }
      #button-get-validate-code-modal{
        background-color:#f90;
        width:300px;
      }
      #td-get-validate-code-modal{
        width:300px;
      }
  body
    form#register-modal-form(method='post', action='/accounts/register/ajax/')
      - csrf_token
      table
        tr
          td
            input#reg_identifier(type="text", name="identifier", placeholder="请输入手机号")
          td#td-get-validate-code-modal
            button#button-get-validate-code-modal(type='button',style="top:-2px") 获取验证码
        tr
          td(colspan=2)
            input#id_validate_code(type="text", name="validate_code", placeholder="请输入验证码", autocomplete='off', title="请输入验证码")
        tr
          td(colspan=2)
            input#reg_password2(type="password", name="password1", placeholder="请输入密码", autocomplete='off', title="请输入密码", maxlength="20")
        tr
          td(colspan=2)
            input#reg_password2(type="password", name="password2", placeholder="请再次输入密码", autocomplete='off', title="请确认密码", maxlength="20")
        tr
          td(colspan=2)
            input#reg_password2(type="text", name="invitecode", placeholder="邀请码（选填）", autocomplete='off', title="邀请码", maxlength="20")
        tr
          td(colspan=2)
            button#register_submit.button-account.span12(type='submit') 注 册

    script.
      require(["/static/js/register.js"])