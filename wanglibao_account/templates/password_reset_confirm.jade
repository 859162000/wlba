- load widget_tweaks
- load formatters
doctype html
- with '密码重置' as title
include include/head
- endwith
body
  include include/header
  .l-activity-panel
    .well.clearfix
      .row
        ul.reset-pass-steps
          li.step 1 填写账户名
          li.step.pre-active 2 验证身份
          li.step.active 3 设置密码
          li.step.end 4 完成
      .space-vertical-s
      .row(style="text-align:center")
        .ispan4
          .form-title
            label.font-l 请设置新密码
              form(method="POST")
                - csrf_token
                .form-row
                  input.input-large.ispan8(placeholder="输入新密码", title="新密码", name="new_password1", type="password")
                .form-row
                  input.input-large.ispan8(placeholder="再次输入密码", title="新密码2", name="new_password2", type="password")
                .form-row.form-bottom-bar
                  button#setPasswordButton.ispan4.pull-right.button-red.button-middle(type="submit") 设置

  include include/footer
  script(src="/static/js/require.js" data-main="/static/js/set_password")
  include include/tracking