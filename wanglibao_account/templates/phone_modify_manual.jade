extends account_home_base
- load formatters
- load mathfilters
block head
    include include/head
block sidebar
    //- with '账户总览' as activeItem
    include include/user_center_sidebar
block main
    .main_wrap
        .main_title_top 身份信息-人工审核修改手机号
        .form_wrap
            .title_top 客服会对您所提交的资料进行审核，审核结果将以短信通知您
            form.form-group(enctype="multipart/form-data", content_type="multipart/form-data", action="/api/manual_modify/phone/", method="post")
                -csrf_token
                .box
                    label 真实姓名
                    .box_right
                        .text 张****
                .box
                    label!='<span>*</span>身份证正面'
                    .box_right
                        .input_box
                            span 浏览
                            <input id="id_front_image" class='input' type="file" name="id_front_image" multiple="true" val='选择'/>
                        .title 请上传彩色、完整证件图片，支持jpg、png、bmp格式，<br>且文件大小不超过2M的图片
                        .upload_img#user_img_1
                            img.send_img#file_img_1(src="/static/images/account_safe/img.jpg")
                .box
                    label!='<span>*</span>身份证背面'
                    .box_right
                        .input_box
                            span 浏览
                            <input id="id_back_image" class='input' type="file" name="id_back_image" multiple="true" val='选择'/>
                        .title 请上传彩色、完整证件图片，支持jpg、png、bmp格式，<br>且文件大小不超过2M的图片
                        .upload_img#user_img_2
                            img.send_img#file_img_2(src="/static/images/account_safe/img.jpg")
                .box
                    label!='<span>*</span>手持身份证正面'
                    .box_right
                        .input_box
                            span 浏览
                            <input id="id_user_image" class='input' type="file" name="id_user_image" multiple="true" val='选择'/>
                        .title 请上传本人手持身份证图片，支持jpg、png、bmp格式，<br>且文件大小不超过2M的图片
                        .upload_img#user_img_3
                            img.send_img#file_img_3(src="/static/images/account_safe/img.jpg")
                .box
                    label!='<span>*</span>手持银行卡正面'
                    .box_right
                        .input_box
                            span 浏览
                            <input id="id_bank_image" class='input' type="file" name="id_bank_image" multiple="true" val='选择'/>
                        .title 请上传本人手持已绑定银卡的照片，支持jpg、png、bmp格式，<br>且文件大小不超过2M的图片
                        .upload_img#user_img_4
                            img.send_img#file_img_4(src="/static/images/account_safe/img.jpg")
                .box
                    label!='<span>*</span>新手机号'
                    .box_right
                        <input class="input_phone" name="new_phone" id="a" type='text' placeholder="请输入新手机号码" autocomplete="off"/>
                        span.input_right ! 审核结果发送到该手机号
                .box
                    label!='<span>*</span>验证码'
                    .box_right
                        <input class="input_code" name="validate_code" id="b" type='text' placeholder="请输入验证码" autocomplete="off"/>
                        <button type="button" class="get_code">获取验证码</button>
                .box
                    label
                    .box_right
                        <input class="submit" type="submit" value="提交"/>


                    //input(type="submit" value="提交")
    //include global/g_footer
    script.
        require(["/static/js/phone_modify_manual.js?v=5"])

    include include/tracking

