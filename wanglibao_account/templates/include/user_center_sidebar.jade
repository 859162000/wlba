mixin sidebar-item(name, link, target, mark)
  unless target
    target = '_self'
  unless mark
    mark = ''
  if activeItem == name
    li.sidebar-item.active
      a(href=link, target=target)= name
      if mark == '1'
        span.newGif
  else
    li.sidebar-item
      a(href=link, target=target)= name
      if mark == '1'
          span.newGif

