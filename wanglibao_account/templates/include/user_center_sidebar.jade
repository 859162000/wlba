mixin sidebar-item(name, link, target, mark, sty, last)
    unless target
        target = '_self'
    unless mark
        mark = ''
    unless sty
        sty = ''
    unless last
        last = ''
    if activeItem == name or activeSubItem == name
        if mark == '1'
            li.sidebar-item-title.activeA
                a(href=link, target=target)=name
        else
            li.sidebar-item.active
                a(href=link, target=target)
                    em(class=sty)
                    if last == 'last'
                        span(class='last')=name
                    else
                        if last == 'msg'
                            span=name
                            //i 18
                        else
                            span=name
    else
        if mark == '1'
            li.sidebar-item-title
                a(href=link, target=target)=name
        else
            li.sidebar-item
                a(href=link, target=target)
                    em(class=sty)
                    if last == 'last'
                        span(class='last')=name
                    else
                        if last == 'msg'
                            span=name
                            //i 18
                        else
                            span=name
