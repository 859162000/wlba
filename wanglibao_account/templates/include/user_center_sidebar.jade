mixin sidebar-item(name, link, target)
  unless target
    target = '_self'
  if activeItem == name
    li.sidebar-item.active
      a(href=link, target=target)= name
  else
    li.sidebar-item
      a(href=link, target=target)= name

ul.sidebar
  +sidebar-item('账务总览', '/accounts/home/')
  +sidebar-item('充值', '/pay/banks/')
  +sidebar-item('提现', '/pay/withdraw/')

  - var classes = ['sidebar-item']
  if activeItem == '交易记录'
    classes = ['sidebar-item', 'active']
  li(class=classes)
    a(href='/accounts/transaction/p2p/') 交易记录
    ul.sidebar-secondary
      li.sidebar-item
        a(href='/accounts/transaction/p2p/') P2P交易记录
      li.sidebar-item
        a(href='/accounts/transaction/fund/') 货基交易记录

  +sidebar-item('银行卡', '/accounts/bankcard/')

ul.sidebar
  +sidebar-item('邀请奖励', '/accounts/invite/')
  +sidebar-item('实名认证', '/accounts/id_verify/')
  +sidebar-item('我的理财方案', '/portfolio/', '_blank')
  +sidebar-item('我的收藏', '/accounts/favorite/')
