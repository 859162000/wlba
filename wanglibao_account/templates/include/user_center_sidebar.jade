mixin sidebar-item(name, link, target)
  unless target
    target = '_self'
  if activeItem == name or activeSubItem == name
    li.sidebar-item.active
      a(href=link, target=target)= name
  else
    li.sidebar-item
      a(href=link, target=target)= name

ul.sidebar
  +sidebar-item('账户总览', '/accounts/home/')
  +sidebar-item('充值', '/pay/banks/')
  +sidebar-item('提现', '/pay/withdraw/')

  - var classes = ['sidebar-item']
  if activeItem == '交易记录'
    classes = ['sidebar-item', 'active']
  li(class=classes)
    a(href='/accounts/transaction/p2p/') 交易记录
    ul.sidebar-secondary
      +sidebar-item('P2P交易记录', '/accounts/transaction/p2p/')
      +sidebar-item('货基交易记录', '/accounts/transaction/fund/')

  +sidebar-item('银行卡', '/accounts/bankcard/')

