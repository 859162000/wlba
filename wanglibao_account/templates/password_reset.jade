- load widget_tweaks

doctype html
- with '密码重置' as title
include include/head
- endwith
body
  include include/header
  include include/navigation
  .space-vertical-l
  .white-container
    .well.clearfix
      .row
        ul.reset-pass-steps
          li.step.begin.active 1、填写账户名
          li.step 2、验证身份
          li.step 3、设置密码
          li.step.end 4、完成
      .space-vertical-s
      .row.password-reset-container
        form#identifier.ispan7(method="post", action="{%url 'password_reset_validate'%}")
          - csrf_token
          fieldset.margin-top-xxxl
            .span3.font-s.align-right 请输入手机号：
            .span9-omega
              - render_field form.identifier  placeholder="请输入手机号" title="请输入手机号"
            .space-vertical-s
            .form-row.form-bottom-bar.margin-top-l
              .span3 &nbsp;
              .span9-omega
                button#submitButton.ispan3.button-red.button-middle(type="submit") 下一步
  .space-vertical-l
  include include/footer

  script.
    require(["/static/js/password_reset.js"])

  include include/tracking
