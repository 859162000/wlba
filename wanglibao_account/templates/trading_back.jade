extends account_home_base

- load formatters
- load mathfilters
- load widget_tweaks

block head
  - with '密码管理' as title
  include include/common_head
  - endwith

block sidebar
  - with '密码管理' as activeItem
  include include/user_center_sidebar
  - endwith

block main
  .panel
    .well
        .panel-title-bar__no-border
            .panel-title.zhma(style='display:none') 密码管理 > 找回交易密码
            .panel-title.szma(style='display:none') 密码管理 > 设置交易密码
    .setTradingPwd.back-div
        ul#backOne(style="display:none")
            li
                label.label1 第1/2步:
                span 身份认证
            li.mt10
                label 真实姓名
                span#name
            li
                label 身份证号码
                input(type='text',placeholder="请输入身份证号码",name='id').sfz#citizen_id
                em(style='display:none')#sfzError
                    i
                    |
            li
                label 绑定银行卡
                span#bindingEdInfo
                input(type='hidden' id='bankIsNoBind')
            li.mt28
                label
                a(href='javascript:void(0)',data-phone="{{user.wanglibaouserprofile.phone}}").nextBtn#nextBtn 下一步
        ul#backTwo(style="display:none")
            li
                p.twoStep(style="display:none")
                    label.label1 第2/2步:
                    span 重置交易密码
                p.textIn 请设置6位数字作为交易密码，如：246802
            li
                label 新交易密码
                input(type='password',placeholder="请输入交易密码",name='new_trade_pwd').sfz#pwd1
                em(style='display:none')#sfzError
                    i
                    |
            li
                label 确认交易密码
                input(type='password',placeholder="请输入交易密码",name='new_trade_pwd').sfz#pwd2
                em(style='display:none')#yzmError
                    i
            li.mt28
                label
                a(href='javascript:void(0)',tag='1').nextBtn.confirmBtn 确认
  script.
    require(['/static/js/back.js?v=20151023'])


