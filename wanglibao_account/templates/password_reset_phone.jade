- load widget_tweaks
- load formatters
doctype html
- with '手机密码重置' as title
include include/head
- endwith
body
  include include/header
  .l-activity-panel
    .well.clearfix
      .row
        ul.reset-pass-steps
          li.step.done 1 填写账户名
          li.step.active 2 验证身份
          li.step 3 设置密码
          li.step 4 完成
      .space-vertical-s
      .row(style="text-align:center")
        .ispan4
          .form-title
            label.font-l 重置密码 {{user_to_reset | safe_identifier}}
          if user_to_reset.email
            #sendMail.form-row
              button#sendMailButton.ispan6.pull-right.button-red.button-middle(type="button", data-url="/accounts/password/reset/send_mail/") 发送重置邮件
            #sendMailDone.form-row(style="display:none")
              p 验证邮件发送成功，请您到邮箱查看。

          if user_to_reset.wanglibaouserprofile.phone
            form
              - csrf_token
              .form-row
                input.input-large.ispan8(placeholder="验证码", title="验证码", name="validate_code", type="text")
                button#sendValidateCodeButton.ispan4.button-red.button-middle.pull-right(type="button", data-url="/accounts/password/reset/send_validate_code/") 发送验证码
              .form-row.form-bottom-bar
                button#nextStep.ispan4.pull-right.button-red.button-middle(type="button", data-url="/accounts/password/reset/validate_phone_code/") 下一步
  .space-vertical-s
  include include/footer

  script(src="/static/js/require.js" data-main="/static/js/resetPasswordValidateUser")

  include include/tracking