block main
    .main_wrap.main_wrap_1
        .main_title_top 身份信息
        .info_box.is_open
            .img.img_1
            dl
                dt
                    .text 手机号
                    .ico.is_set_ico
                    span.is_set_text 已绑定
                dd 180*****274
