-load formatters
doctype html
- with 'P2P交易记录' as title
include include/head
- endwith
body
  include include/header
  include include/navigation
  .row
    .span3
      - with '充值记录' as activeItem
      include include/user_center_sidebar
      - endwith
    .span9-omega.panel-padding
      .space-vertical-s
      .panel-title-bar-gray
        .panel-tabs
          .panel-tab
            a(href='/accounts/transaction/p2p/') 交易记录
          .panel-tab.active 充值记录
          .panel-tab
            a(href='/accounts/transaction/withdraw/') 取现记录
      .panel-container
        table.trust-table
          thead
            tr
              th 流水号
              th 时间
              th 金额(元)
              th 状态
          tbody
            each trade_record in pay_records
              tr
                td {{trade_record.id}}
                td {{trade_record.create_time | date:"Y-m-d h:i:s"}}
                td {{trade_record.amount}}
                td {{trade_record.status}}
      - with data=pay_records uri='/accounts/transaction/deposit/'
      include include/pager
      - endwith
  include include/footer
  include include/templates
  include include/tracking

