    include include/user_center_sidebar
block main
  .account-home-panel
      .invite-box.clearfix
          .invite-left
              p.mt57 {{earning}}
              p.mt10
                span.invite-span1
                理财佣金（元）
          .invite-right
              .right-top
                  p.mt20 {{amount}}
                  p.fs14
                    span.invite-span2
                    邀请投资总额（元）
              .right-bottom
                  .bottom-left
                      p.mt20 {{first_count}}人/{{first_amount}}
                      p.fs14
                        span.invite-span3
                        好友/投资额（元）
